}

UserCommand interpret() :
{
  	Concept c;
	DirectionConcept mvDir;
	IdentifierConcept id;
	ItemConcept item;
	AmbiguousConcept ac;
}{
  LOOKAHEAD(2)
  mvDir=move()  {    return new MoveCommand(mvDir);
  }
| inventory()
  {  	return new GetInventoryCommand();
  }
| time()
  {
    return new GetTimeCommand();  }
| quit()
  {
    return new QuitCommand();  }
| id=save()
  {
    return new SaveCommand(id);  }
| id=restore()
  {  	return new RestoreCommand(id);
  }
| item=drop()
  {
    return new DropCommand(item);  }
| c=open()
  {
    if (ItemConcept.class.isInstance(c)) return new OpenCommand((ItemConcept)c);
    else return new OpenCommand((DirectionConcept)c);  }
| item=take()
  { 	return new TakeCommand(item); 
  }
| ac=examine()
  {
    if (null == ac) return new ExamineCommand();	else return new ExamineCommand(ac);
  }
}

DirectionConcept dir() :{}
{	< NDIR > { return DirectionConcept.N; }
| < SDIR > { return DirectionConcept.S; }| < EDIR > { return DirectionConcept.E; }| < WDIR > { return DirectionConcept.W; }
| < UDIR > { return DirectionConcept.U; }
| < DDIR > { return DirectionConcept.D; }
}

String dirText() :
{
  Token t;}
{
  t=< NDIR > { return t.image; }
| t=< SDIR > { return t.image; }
| t=< EDIR > { return t.image; }
| t=< WDIR > { return t.image; }
| t=< UDIR > { return t.image; }
| t=< DDIR > { return t.image; }
}

IdentifierConcept id() :
{
  Token t;
  String dir;
}
{
  t=< ID_CONCEPT > { return new IdentifierConcept(t.image); }
| t=< ITEM_WORD > { return new IdentifierConcept(t.image); }
| dir=dirText() { return new IdentifierConcept(dir); }
}

String itemText() :
{
  Token t;
  String text;}
{
  t=< ITEM_WORD > { return t.image; }
| text=dirText() { return text; }
}

ItemConcept item() :
{
  StringBuffer termimage = new StringBuffer();
  String s;
}
{
  s=itemText()
  {
	termimage.append(s);  }
  (
    s=itemText()
    {
        termimage.append(" ");		termimage.append(s);
    }
  )*
{
  return new ItemConcept(termimage.toString());}}

Concept dirOrItem() :
{
  DirectionConcept dir;
  ItemConcept item;}
{
  LOOKAHEAD(2)
  dir=dir()  {    return dir;
  }
|
  item=item()
  {	return item;
  }}

DirectionConcept move() :
{
    DirectionConcept mvDir;
}
{
  [< MOVE_CMD >] mvDir=dir()  {
    return mvDir;  }
}

void inventory() : {}
{	< INV_CMD >
}

void time() : {}
{	< TIME_CMD >
}

void quit() : {}{
	< QUIT_CMD >
}

IdentifierConcept save() :
{
    IdentifierConcept saveId;
}
{
  < SAVE_CMD > saveId=id()  {
    return saveId;  }}

IdentifierConcept restore() :
{	IdentifierConcept restId;
}
{
  < REST_CMD > restId=id()
  {	return restId;
  }}

ItemConcept drop() :
{
  ItemConcept item;}
{
  < DROP_CMD > item=item()  {    return item;
  }}

Concept open_object() :
{  Concept c;
}
{
< DOOR_TO_THE > c=dir()
  {
    return c;
  }
|
  c=dirOrItem()
  {
    return c;
  }}

Concept open() :
{
  Concept c;
  DirectionConcept dir;
  ItemConcept item;}
{
  < OPEN_CMD > c=open_object()
  {    return c;
  }
}

ItemConcept take() :
{  ItemConcept item;
}
{
  < TAKE_CMD > item=item()
  {	return item;
  }}

AmbiguousConcept examine() :
{
  ItemConcept item=null;}
{	< EXAM_CMD >
	[
		item=item()
	]
	{
	  if (null == item)
	  	return null;
	  else
	  	return new AmbiguousConcept(item, new FeatureConcept(item.toString()));
	}
}

int one_line() : {}
{
  sum() ";" { return 0; }
| ";"	    { return 1; }
}
void sum() : {}
{
  term() (( <PLUS> | <MINUS> ) term())*
}
void term() : {}
{
  unary() (( <MULTIPLY> | <DIVIDE> ) unary())*
}
void unary() : {}
{
  <MINUS> element()
 | element()
}
void element() : {}
{
  <CONSTANT>
| "(" sum() ")"
}
